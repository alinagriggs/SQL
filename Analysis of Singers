INSERT INTO singers VALUES ( 5, 'Billy', 'Joel', 73);
INSERT INTO singers VALUES ( 6, 'Mariah', 'Carey', 53);

CREATE TABLE music (id INTEGER PRIMARY KEY, Genre text, Discography integer, Grammy_Nominations integer);

INSERT INTO music VALUES ( 1, 'Country', 4, 14);
